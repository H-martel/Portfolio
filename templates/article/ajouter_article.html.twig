{% extends 'base.html.twig' %}

{% block title %}Ajouter un Article
{% endblock %}
{% block body %}
<div class="container rounded bg-white mt-4 col-11">
{{ form_start(form) }}
    <div class=" row p-4">
        <div class="col-4">
            {{form_row(form.titre) }}
        </div>
        <div class="col-8">
            {{ form_row(form.contenu) }}
        </div>
    </div>
    <div class=" row ">
        <div class="col-6">
            {{ form_row(form.lienImage) }}
        </div>
        <div class="col-6">
            {{ form_row(form.nomPdf) }}
        </div>
    </div>
    <div class=" row p-2">
        <div class="col-12 d-flex justify-content-center">
            {{form_row(form.save)}}
        </div>
        </div>
{{ form_end(form) }}
{% endblock %}